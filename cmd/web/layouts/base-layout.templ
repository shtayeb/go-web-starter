package layouts


import "go-htmx-sqlite/cmd/web/components/ui/dropdown"
import "go-htmx-sqlite/cmd/web/components/ui/popover"
import "go-htmx-sqlite/cmd/web/components/ui/avatar"
import "go-htmx-sqlite/cmd/web/components"
import "context"
import "go-htmx-sqlite/internal/queries"

func GetUser(ctx context.Context) queries.User {
	if theme, ok := ctx.Value("user").(queries.User); ok {
		return theme
	}

	return queries.User{}
}

templ BaseLayout() {
	<!DOCTYPE html>
	<html lang="en" class="h-screen">
		<head>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width,initial-scale=1"/>
			<title>Go Blueprint Hello</title>
			<link href="assets/css/output.css" rel="stylesheet"/>
			<script src="assets/js/htmx.min.js"></script>

			@dropdown.Script()
			@popover.Script()
			@avatar.Script()

			@components.ThemeSwitcherScript()
		</head>
		<body>
			{ children... }
		</body>
	</html>
}
