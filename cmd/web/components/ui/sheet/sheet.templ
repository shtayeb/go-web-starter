func sideClasses(side Side) string {
	switch side {
	case SideRight:
		return "inset-y-0 right-0 h-full w-3/4 sm:max-w-sm border-l"
	case SideLeft:
		return "inset-y-0 left-0 h-full w-3/4 sm:max-w-sm border-r"
	case SideTop:
		return "inset-x-0 top-0 w-full border-b"
	case SideBottom:
		return "inset-x-0 bottom-0 w-full border-t"
	default:
		return "inset-y-0 right-0 h-full w-3/4 sm:max-w-sm border-l"
	}
}

func transformClasses(side Side) string {
	switch side {
	case SideRight:
		return "data-[tui-sheet-open=false]:translate-x-full data-[tui-sheet-open=true]:translate-x-0"
	case SideLeft:
		return "data-[tui-sheet-open=false]:-translate-x-full data-[tui-sheet-open=true]:translate-x-0"
	case SideTop:
		return "data-[tui-sheet-open=false]:-translate-y-full data-[tui-sheet-open=true]:translate-y-0"
	case SideBottom:
		return "data-[tui-sheet-open=false]:translate-y-full data-[tui-sheet-open=true]:translate-y-0"
	default:
		return "data-[tui-sheet-open=false]:translate-x-full data-[tui-sheet-open=true]:translate-x-0"
	}
}

